{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./build/cjs",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "removeComments": false
  },
  "include": ["./src", "./entry"],
  "exclude": [
    "node_modules/**/*",
    "tests/**/*",      // Exclude all test files
    "tools/fonts/legacy",
    "releases",
    "reference",
    "build"
  ]
}
